<div class='form'>
  <div class='form-group'>
    <h1>Repo Seeker</h1>
    <%= form_with(url: search_repositories_path, method: :get, data: { turbo_frame: 'search_results' }) do %>
      <div class="input-group mb-3">
        <%= text_field_tag :query, '', placeholder: 'Search Repository', class: 'form-control' %>
        <div class="input-group-append">
          <%= button_tag 'Search', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
